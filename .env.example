# Database connection string (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Session secret for authentication (generate a secure random string)
SESSION_SECRET=your-secure-session-secret-here

# Node environment (development, production, test)
NODE_ENV=development

# Port for the server (optional, defaults to 5000)
PORT=5000

# Google Sheets API credentials (optional, for Google Sheets sync)
GOOGLE_SHEETS_CLIENT_EMAIL=
GOOGLE_SHEETS_PRIVATE_KEY=

# SendGrid API key (optional, for email notifications)
SENDGRID_API_KEY=
SENDGRID_SENDER_EMAIL=

# Frontend URL (optional, defaults to http://localhost:5000)
PUBLIC_URL=http://localhost:5000